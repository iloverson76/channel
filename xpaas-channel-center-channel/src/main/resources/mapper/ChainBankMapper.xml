<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.deepexi.channel.mapper.ChainBankMapper">
    <resultMap type="com.deepexi.channel.domain.bank.ChainBankDO" id="CcChainBankDtoResult">
        <result property="id" column="id" />
        <result property="bankAccountId" column="bank_account_id" />
        <result property="chainId" column="chain_id" />
        <result property="version" column="version" />
        <result property="remark" column="remark" />
        <result property="dr" column="dr" />
        <result property="createdBy" column="created_by" />
        <result property="createdTime" column="created_time" />
        <result property="updatedBy" column="updated_by" />
        <result property="updatedTime" column="updated_time" />
    </resultMap>
    <!--<select id="findList" resultType="com.deepexi.channel.domain.eo.CcChainBank">-->
        <!--SELECT * FROM cc_chain_bank WHERE 1=1-->
    <!--</select>-->

    <update id="deleteByIds">
        UPDATE cc_chain_bank set dr=1 where id in
        <foreach collection="ids" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <select id="getChainBankByChainId" resultType="com.deepexi.channel.domain.bank.ChainBankDO">
        select * from cc_chain_bank where dr = 0
        and chain_id = #{id}
    </select>

    <update id="deleteByChainId">
        UPDATE cc_chain_bank set dr=1 where chain_id = #{chainId}
    </update>

</mapper>