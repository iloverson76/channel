<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.deepexi.channel.mapper.StoreAreaMapper">
    <resultMap type="com.deepexi.channel.domain.store.StoreAreaDO" id="StoreAreaDOResult">
        <result property="id" column="id" />
        <result property="chainId" column="chain_id" />
        <result property="storeId" column="store_id" />
        <result property="description" column="description" />
        <result property="version" column="version" />
        <result property="remark" column="remark" />
        <result property="dr" column="dr" />
        <result property="createdBy" column="created_by" />
        <result property="createdTime" column="created_time" />
        <result property="updatedBy" column="updated_by" />
        <result property="updatedTime" column="updated_time" />
        <result property="appId" column="app_id" />
        <result property="tenantId" column="tenant_id" />
    </resultMap>
    <select id="findList" resultType="com.deepexi.channel.domain.store.StoreAreaDO">
        SELECT * FROM cc_store_area WHERE dr=0
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="storeId != null">
            and store_id = #{storeId}
        </if>
        <if test="areaId != null">
            and area_id = #{areaId}
        </if>
        <if test="areaIds != null and areaIds.size() > 0">
            and area_id
            in
            <foreach collection="areaIds" item="tempId" index="index" open="(" close=")" separator=",">
                #{tempId}
            </foreach>
        </if>
        order by created_time desc
    </select>
</mapper>