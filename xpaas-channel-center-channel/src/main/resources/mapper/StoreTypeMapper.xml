<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.deepexi.channel.mapper.StoreTypeMapper">
    <resultMap type="com.deepexi.channel.domain.store.StoreTypeQuery" id="StoreTypeDOResult">
        <result property="id" column="id" />
        <result property="storeTypeName" column="store_type_name" />
        <result property="storeTypeCode" column="store_type_code" />
        <result property="appId" column="app_id" />
        <result property="tenantId" column="tenant_id" />
    </resultMap>
    <select id="findList" resultType="com.deepexi.channel.domain.store.StoreTypeQuery">
        SELECT * FROM cc_store_type WHERE dr=0
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="storeTypeCode!=null and storeTypeCode!=''">
            and store_type_code like concat('%',#{storeTypeCode},'%')
        </if>
        <if test="storeTypeAccuracyCode!=null and storeTypeAccuracyCode!=''">
            and store_type_code = #{storeTypeAccuracyCode}
        </if>
        <if test="storeTypeName!=null and storeTypeName!=''">
            and store_type_name like concat('%',#{storeTypeName},'%')
        </if>
        <if test="startTime != null">
            and created_time &gt;= #{startTime}
        </if>
        <if test="endTime != null">
            and created_time &lt;= #{endTime}
        </if>
        <if test="updateStartTime != null">
            and updated_time &gt;= #{updateStartTime}
        </if>
        <if test="updateEndTime != null">
            and updated_time &lt;= #{updateEndTime}
        </if>
        <if test="tenantId!=null">
            AND tenant_id = #{tenantId}
        </if>
        <if test="appId!=null">
            AND app_id =#{appId}
        </if>
        order by created_time desc
    </select>

    <update id="deleteByIds">
        UPDATE cc_store_type set dr=1 where id in
        <foreach collection="ids" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>