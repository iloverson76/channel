<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.deepexi.promotion.mapper.CommentModelHistoryMapper">
    <resultMap type="com.deepexi.promotion.domain.CommentModelHistoryDO" id="BaseResultMap">
        <result property="id" column="id"/>
        <result property="appId" column="app_id"/>
        <result property="modelId" column="model_id"/>
        <result property="name" column="name"/>
        <result property="code" column="code"/>
        <result property="identificationCode" column="identification_code"/>
        <result property="updateType" column="update_type"/>
        <result property="dr" column="dr"/>
        <result property="version" column="version"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedTime" column="updated_time"/>
        <result property="remark" column="remark"/>
        <result property="createdBy" column="created_by"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="tenantId" column="tenant_id"/>
    </resultMap>
    <sql id="Base_Column_List">
            id,
            app_id,
            model_id,
            name,
            code,
            identification_code,
            update_type,
            dr,
            version,
            created_time,
            updated_time,
            remark,
            created_by,
            updated_by,
            tenant_id    </sql>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM comment_model_history
        WHERE dr = 0
        <if test="modelId != null">
            and model_id = #{modelId}
        </if>
        <if test="tenantId != null and tenantId != ''">
            and tenant_id = #{tenantId}
        </if>
        ORDER BY id DESC
    </select>
    <!--根据评价对象ID删除评价历史-->
    <update  id="deleteBatchByModelIds" parameterType="java.util.List">
        UPDATE comment_model_history SET dr=1
        WHERE dr=0 and model_id IN
        <foreach close=")" collection="ids" item="item" open="(" separator=", ">
            #{item}
        </foreach>

    </update>
</mapper>
